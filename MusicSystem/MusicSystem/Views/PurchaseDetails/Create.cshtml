@model MusicSystem.Dtos.PurchaseDetailDto

@{
    ViewData["Title"] = "Create";
}

<h1 class="title">Crear compra</h1>


<hr />
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <partial name="_Purchase" />

            <div class="form-group mt-2">
                <input type="submit" value="Crear" class="btn btn-outline-success" />
                <a asp-action="Index" class="btn btn-outline-warning">Regresar</a>
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <div id="resultTable"></div> <!-- Contenedor para la tabla de resultados -->
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    
}




